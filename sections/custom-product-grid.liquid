    // Implement the popup functionality here
  }
});
</script>

<style>
  .custom-product-grid {
    width: 100%;
    margin: 0 auto;
    padding: 32px 0;
    background: #fff;
  }
  .grid-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 24px 0;
  }
  .product-block {
    width: calc(33.33% - 20px);
    margin-bottom: 32px;
    text-align: center;
    box-sizing: border-box;
    background: #fafafa;
    border-radius: 8px;
    padding: 16px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    transition: box-shadow 0.2s;
  }
  .product-block:hover {
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
  }
  .product-block img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin-bottom: 12px;
  }
  .product-block h3 {
    font-size: 20px;
    font-weight: 600;
    margin: 8px 0 4px 0;
    color: #222;
  }
  .product-block p {
    font-size: 16px;
    color: #444;
    margin-bottom: 12px;
  }
  .view-details {
    background: #111;
    color: #fff;
    padding: 10px 28px;
    border-radius: 2px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 15px;
    border: none;
    cursor: pointer;
    transition: background 0.3s, color 0.3s, transform 0.2s;
  }
  .view-details:hover {
    background: #fff544;
    color: #111;
    transform: scale(1.05);
  }
  @media (max-width: 900px) {
    .product-block {
      width: calc(50% - 10px);
    }
  }
  @media (max-width: 600px) {
    .grid-container {
      flex-direction: column;
      gap: 0;
    }
    .product-block {
      width: 100%;
      margin-bottom: 20px;
    }
  }
</style>