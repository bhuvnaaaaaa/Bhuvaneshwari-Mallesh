<link rel="stylesheet" href="{{ 'custom-banner.css' | asset_url }}">

<div class="custom-banner-container">
  <!-- Top Bar -->
  <header class="banner-top-bar">
    <div class="logo-text">TISSO VISON</div>
    <div class="promo-text">Find the ideal gift for your loved ones.</div>
    <a href="#gift" class="btn btn-outline">CHOOSE GIFT &rarr;</a>
  </header>

  <!-- Main Hero Section -->
  <main class="banner-main-area">
    <div class="banner-text-content">
      <h1>The Gift Guide</h1>
      <p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>
      <a href="#shop" class="btn btn-dark">SHOP NOW &rarr;</a>
    </div>
  </main>

  <!-- Bottom Footer Bar -->
  <footer class="banner-footer-bar">
    <span>SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</span>
  </footer>
</div>

