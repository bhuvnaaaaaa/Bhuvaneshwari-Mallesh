<div class="custom-product-grid">
  <div class="grid-container">
    {% for i in (1..6) %}
      {% assign product_key = 'product_' | append: i %}
      {% assign product_handle = section.settings[product_key] %}
      {% assign product = all_products[product_handle] %}
      {% if product %}
        <div class="product-block" 
          data-product-id="{{ product.id }}"
          data-product-name="{{ product.title }}"
          data-product-price="{{ product.price | money }}"
          data-product-description="{{ product.description | strip_html | escape }}"
          data-product-variants='{{ product.variants | json | escape }}'>

          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
          <button class="view-details" data-product-id="{{ product.id }}">+</button>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Single popup (not inside loop) -->
  <div class="product-popup hidden">
    <div class="popup-overlay"></div>
    <div class="popup-content">
      <button class="popup-close">&times;</button>
      <img class="product-image" src="" alt="">
      <h2 class="product-name"></h2>
      <p class="product-price"></p>
      <p class="product-description"></p>

      <label for="variants">Choose Variant:</label>
      <select class="product-variants"></select>

      <button class="add-to-cart-button">Add to Cart</button>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [
    { "type": "product", "id": "product_1", "label": "Select Product 1" },
    { "type": "product", "id": "product_2", "label": "Select Product 2" },
    { "type": "product", "id": "product_3", "label": "Select Product 3" },
    { "type": "product", "id": "product_4", "label": "Select Product 4" },
    { "type": "product", "id": "product_5", "label": "Select Product 5" },
    { "type": "product", "id": "product_6", "label": "Select Product 6" }
  ],
  "presets": [
    { "name": "Custom Product Grid", "category": "Custom" }
  ]
}
{% endschema %}

<style>
  .custom-product-grid {
    width: 100%;
    margin: 0 auto;
    padding: 32px 0;
    background: #fff;
  }

  .grid-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 24px 0;
  }

  .product-block {
    width: calc(33.33% - 20px);
    margin-bottom: 32px;
    text-align: center;
    box-sizing: border-box;
    background: #fafafa;
    border-radius: 8px;
    padding: 16px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    transition: box-shadow 0.2s;
  }

  .product-block:hover {
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
  }

  .product-block img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin-bottom: 12px;
  }

  .product-block h3 {
    font-size: 20px;
    font-weight: 600;
    margin: 8px 0 4px 0;
    color: #222;
  }

  .product-block p {
    font-size: 16px;
    color: #444;
    margin-bottom: 12px;
  }

  .view-details {
    background: #111;
    color: #fff;
    padding: 10px 28px;
    border-radius: 2px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 15px;
    border: none;
    cursor: pointer;
    transition: background 0.3s, color 0.3s, transform 0.2s;
  }

  .view-details:hover {
    background: #fff544;
    color: #111;
    transform: scale(1.05);
  }

  .product-popup {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0,0,0,0.6);
    z-index: 9999;
  }

  .product-popup.hidden {
    display: none;
  }

  .popup-content {
    background: #fff;
    padding: 24px;
    max-width: 600px;
    width: 90%;
    border-radius: 8px;
    position: relative;
  }

  .popup-close {
    position: absolute;
    top: 12px;
    right: 12px;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
  }

  .popup-body {
    padding-top: 20px;
  }

  @media (max-width: 900px) {
    .product-block {
      width: calc(50% - 10px);
    }
  }

  @media (max-width: 600px) {
    .grid-container {
      flex-direction: column;
      gap: 0;
    }
    .product-block {
      width: 100%;
      margin-bottom: 20px;
    }
  }
</style>

{% javascript %}
  {{ 'custom-grid.js' | asset_url | script_tag }}
{% endjavascript %}

  


